# Environment Configuration Template
# Copy to .env and fill in your values

# Jamf Pro Configuration
JAMF_URL=https://your-instance.jamfcloud.com
JAMF_USERNAME=api_user
JAMF_PASSWORD=your_secure_password

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_token
GITHUB_REPOSITORY=YOUR_ORG/patch-automation

# Title Editor Configuration (Optional)
TITLE_EDITOR_URL=https://your-title-editor.jamfcloud.com
TITLE_EDITOR_TOKEN=your_title_editor_token

# Workflow Configuration
LOG_LEVEL=INFO
CACHE_DIR=cache
STATE_DIR=state
WORKING_DIR=/tmp/patch_automation

# Performance Settings
MAX_PARALLEL_WORKERS=5
DOWNLOAD_TIMEOUT=600
UPLOAD_TIMEOUT=1800

# Notification Settings (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_RECIPIENTS=admin@company.com,security@company.com

# Runner Configuration
RUNNER_WORKSPACE=/Users/melvin/Developer/GitHub/AAP/patch-automation
RUNNER_OS=macOS

# Feature Flags
ENABLE_TITLE_EDITOR_SYNC=false
ENABLE_METRICS_COLLECTION=true
ENABLE_DRY_RUN_MODE=false

# Security Settings
VERIFY_SIGNATURES=true
VERIFY_TEAM_IDS=true
REMOVE_QUARANTINE=true